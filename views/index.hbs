{{#if warning}}
<p class="alert alert-danger">{{warning}}</p>
{{/if}}

<form action="/softres/register" method="POST">
    <div class="card">
        <div class="card-body">
            <div class="form-group">
                <label for="softres">Soft Res Link</label>
                <input type="text" name="softres" class="form-control">
            </div>

            <div class="form-group">
                <label for="charName">Char Name</label>
                <input type="text" name="charName" class="form-control">
            </div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Enviar" class="btn btn-primary">
        </div>
    </div>

</form>